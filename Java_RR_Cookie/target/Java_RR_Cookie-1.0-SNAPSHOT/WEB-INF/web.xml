<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="true">

    <!--配置首页-->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index.htm</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>ContextDemo</servlet-name>
        <servlet-class>com.bit.a_path.ContextDemo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContextDemo</servlet-name>
        <url-pattern>/context</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ScopeDemo1</servlet-name>
        <servlet-class>com.bit.b_scope.ScopeDemo1</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ScopeDemo1</servlet-name>
        <url-pattern>/scope1</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ScopeDemo2</servlet-name>
        <servlet-class>com.bit.b_scope.ScopeDemo2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ScopeDemo2</servlet-name>
        <url-pattern>/scope2</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ForwardDemo</servlet-name>
        <servlet-class>com.bit.c_forward.ForwardDemo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForwardDemo</servlet-name>
        <url-pattern>/forward</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ResponseDemo</servlet-name>
        <servlet-class>com.bit.d_response.ResponseDemo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ResponseDemo</servlet-name>
        <url-pattern>/response</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>RefreshDemo</servlet-name>
        <servlet-class>com.bit.e_refresh.RefreshDemo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RefreshDemo</servlet-name>
        <url-pattern>/refresh</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RequestDemo</servlet-name>
        <servlet-class>com.bit.f_request.RequestDemo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestDemo</servlet-name>
        <url-pattern>/request</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RequestDemo2</servlet-name>
        <servlet-class>com.bit.f_request.RequestDemo2</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestDemo2</servlet-name>
        <url-pattern>/request2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RequestDemo3</servlet-name>
        <servlet-class>com.bit.f_request.RequestDemo3</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RequestDemo3</servlet-name>
        <url-pattern>/request3</url-pattern>
    </servlet-mapping>


    
</web-app>